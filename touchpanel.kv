
<TouchPanelSlider>:
    orientation: 'vertical'

<TouchPanelControl>:
    menu_layout: menu_layout
    button_layout: button_layout
    slider_layout: slider_layout
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        
        AnchorLayout:
            id: menu_layout
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1, 0.05
            anchor_x: 'right'
            anchor_y: 'center'
            
            
            Label:
                text: 'TouchPanel'
                halign: 'center'
            
            Button:
                size_hint: 0.05, 1
                on_release: root.app.open_settings()
                backgound_normal: ''
                Image:
                    source: 'images/config.png'
                    allow_stretch: True
           
        BoxLayout:
            id: button_layout
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1, 0.2
            
        BoxLayout:
            id: slider_layout
            spacing: 10
            orientation: 'horizontal'

            