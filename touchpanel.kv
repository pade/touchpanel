<TouchPanelButton>:
    canvas:
        Clear
        Color:
            rgb: (1, 1, 1)
        BorderImage:
            border: (16, 16, 16, 16)
            auto_scale: True
            pos: self.pos
            size: self.size
            source: 'images/button_normal.png' if self.state == 'normal' else 'images/button_down.png'
            
<TouchPanelSlider>:
    orientation: 'vertical'

<TouchPanelControl>:
    menu_layout: menu_layout
    button_layout: button_layout
    slider_layout: slider_layout
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: 10
        
        AnchorLayout:
            id: menu_layout
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1, 0.05
            anchor_x: 'right'
            anchor_y: 'center'
            
            Label:
                text_size: self.size
                text: 'TouchPanel'
                halign: 'center'

            IpAddress:
                text_size: self.size
                id: ip_address
                halign: 'left'
                
            ImageButton:
                size_hint: 0.05, 1
                on_release: root.app.open_settings()
                source: 'images/config.png'
           
        BoxLayout:
            id: button_layout
            spacing: 25
            orientation: 'horizontal'
            size_hint: 1, 0.2
            
        BoxLayout:
            id: slider_layout
            spacing: 10
            orientation: 'horizontal'
        BoxLayout:
            id: footer_layout
            size_hint: 1, 0.1
