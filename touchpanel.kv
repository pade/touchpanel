
<TouchPanelSlider>:
    orientation: 'vertical'

<TouchPanelMain>:
    menu_layout: menu_layout
    button_layout: button_layout
    slider_layout: slider_layout
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        
        BoxLayout:
            id: menu_layout
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1, 0.05
            
            Label:
                text: 'TouchPanel'
                halign: 'center'
            
        BoxLayout:
            id: button_layout
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1, 0.2
            
        BoxLayout:
            id: slider_layout
            spacing: 10
            orientation: 'horizontal'

            